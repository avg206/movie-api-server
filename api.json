    }
  },
  "host": "react-cdp-api.herokuapp.com",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/movies": {
      "get": {
        "description": "Get movies list",
        "summary": "Get movies list",
        "tags": [
          "movie"
        ],
        "operationId": "MoviesGet",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "sortBy",
            "schema": {
              "type": "string"
            },
            "description": "Field to sort by"
          },
          {
            "in": "query",
            "name": "sortOrder",
            "schema": {
              "type": "string"
            },
            "description": "Value to define sort direction - 'decs' or 'asc'"
          },
          {
            "in": "query",
            "name": "search",
            "schema": {
              "type": "string"
            },
            "description": "Search value"
          },
          {
            "in": "query",
            "name": "searchBy",
            "type": "strgin",
            "enum": ["title", "genres"],
            "description": "Type of search (title or genres)"
          },
          {
            "in": "query",
            "name": "filter",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "description": "Array to filter by genres"
          },
          {
            "in": "query",
            "name": "offset",
            "schema": {
              "type": "string"
            },
            "description": "Offset in result array for pagination"
          },
          {
            "in": "query",
            "name": "limit",
            "schema": {
              "type": "string"
            },
            "description": "Limit amount of items in result array for pagination"
          }
        ],
        "responses": {
          "200": {
            "description": "Movies list",
            "schema": {
              "$ref": "#/definitions/MoviesResponse"
            },
            "examples": {}
          }
        }
      }
    },
    "/movies/{id}": {
      "get": {
        "description": "Get movie by id",
        "summary": "Get movie by id",
        "tags": [
          "movie"
        ],
        "operationId": "MoviesGetById",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": ""
          }
        ],
        "responses": {
          "200": {
            "description": "Movie object",
            "schema": {
              "$ref": "#/definitions/Movie"
            },
            "examples": {}
          }
        }
      }
    }
  },
  "definitions": {
    "MoviesResponse": {
      "title": "MoviesResponse",
      "type": "object",
      "properties": {
        "data": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Movie"
          }
        },
        "total": {
          "type": "number"
        },
        "offset": {
          "type": "number"
        },
        "limit": {
          "type": "number"
        }
      }
    },
    "Movie": {
      "title": "Movie",
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "title": {
          "description": "Movie title",
          "type": "string"
        },
        "tagline": {
          "type": "string"
        },
        "vote_average": {
          "type": "number"
        },
        "vote_count": {
          "type": "number"
        },
        "release_date": {
          "type": "string"
        },
        "poster_path": {
          "description": "Poster Image",
          "type": "string"
        },
        "overview": {
          "type": "string",
          "description": "Short description of movie"
        },
        "budget": {
          "type": "number"
        },
        "revenue": {
          "type": "number"
        },
        "runtime": {
          "type": "number",
          "description": "Movie duration"
        },
        "genres": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}